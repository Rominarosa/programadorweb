<div class="container" style="margin: 60px auto;">
    <div class="row">
        <div class="col-6  offset-3 text-center">
            <h1>***Agregar una nueva promoci√≥n***</h1>
            <form action="/admin/promociones/agregar" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Info" name="info"></textarea>
                </div>
                <button type="submit" class="btn btn-secondary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>