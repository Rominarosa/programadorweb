<div class="container" style="margin: 60px auto;">
    <div class="row">
        <div class="col-6  offset-3 text-center">
            <h1>***Modificar una promoci√≥n***</h1>
            <form method="post" action="/admin/promociones/modificar">
                <input type="hidden" value="{{promociones.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{promociones.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Info</label>
                    <textarea name="info" class="form-control">{{promociones.info}}</textarea>
                </div>
                <button type="submit" class="btn btn-secondary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>